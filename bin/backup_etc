#!/bin/bash

BINDIR="$(cd `dirname "$0"` && pwd)"
ROOTDIR="$( dirname "$BINDIR" )"
LIBDIR="$ROOTDIR/lib"
CONFDIR="$ROOTDIR/conf"

source "$CONFDIR/conf.sh"
source "$LIBDIR/utils.sh"

super_or_fail "to backup /etc dir"

main () {
    ensure_dir "$BAKDIR"

    local name="$( hostname -f )"
    local full_name="$BAKDIR/etc-$name-$DATE_TODAY.tar.bz2"

    echo 'backing /etc dir up to '$full_name
    tar -cjf $full_name /etc || fail "Unable to tar archive"

    echo 'done OK'
}

main "$@"
